# Allow access to uploads directory but restrict to images only
Order Allow,Deny
Allow from all

# Allow only image file types
<FilesMatch "\.(jpg|jpeg|png|gif|bmp|svg|webp|ico)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Block access to all other file types
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi|htaccess|htpasswd|ini|log|sql|txt|md|xml|json|yml|yaml|conf|bak|backup|tmp|temp|exe|dll|bat|cmd|com|pif|scr|vbs|js|jar|war|ear|zip|rar|7z|tar|gz|bz2)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Prevent directory listing
Options -Indexes

# Block access to sensitive files
<Files "*.php">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.sql">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.log">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.ini">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.exe">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.dll">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.bat">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.cmd">
    Order Deny,Allow
    Deny from all
</Files>

# Basic security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
</IfModule> 